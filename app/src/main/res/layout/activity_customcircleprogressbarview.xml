<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dyh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.dyh.customviewlearning.customview.CustomCircleProgressBarView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        dyh:circleWidth="15dp"
        dyh:firstColor="#D4F668"
        dyh:secondColor="#2F9DD2"
        dyh:speed="20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <com.dyh.customviewlearning.customview.CustomCircleProgressBarView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        dyh:circleWidth="25dp"
        dyh:firstColor="#16A3FA"
        dyh:secondColor="#D20F02"
        dyh:speed="10"/>


</LinearLayout>
